<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:tools="http://schemas.android.com/tools"
    layout_height="32dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:ignore="MissingPrefix">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:background="#FFFFFF"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="168dp"
            android:layout_height="122dp"
            android:layout_margin="0dp"
            android:foreground="?android:attr/selectableItemBackground"
            card_view:cardBackgroundColor="#4EAFEA"
            card_view:cardCornerRadius="5dp"
            card_view:cardElevation="3dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:background="#4EAFEA"
                android:padding="0dp">

                <TextView
                    android:id="@+id/textViewNombre_Categoria"
                    android:layout_width="match_parent"
                    android:onClick="siguiente"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:text="* Nombre Categoria: "
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                    android:textColor="#000"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textViewNombreCategoria1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textViewNombre_Categoria"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="1dp"
                    android:hint="NombreCategoria"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                    android:textColor="#000"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/textViewEstado_Categoria"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textViewNombreCategoria1"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="1dp"
                    android:text="* EstadoCategoria"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                    android:textColor="#000"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textViewEstado_Categoria1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textViewEstado_Categoria"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="1dp"
                    android:text="EstadoCategoria"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                    android:textColor="#000"
                    android:textStyle="normal" />


            </RelativeLayout>

        </androidx.cardview.widget.CardView>
    </LinearLayout>

</androidx.appcompat.widget.LinearLayoutCompat>


