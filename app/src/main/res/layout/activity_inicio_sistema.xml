<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000"
    android:orientation="vertical"
    tools:context=".InicioSistema">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="10dp"
        android:background="@color/colorAccent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="31dp"
        tools:layout_editor_absoluteY="9dp"
        tools:ignore="Orientation">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="APLICACIÓN DE INVENTARIO DE PRODUCTOS"
            android:textColor="#000"
            android:textSize="16dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="20dp"
            android:orientation="horizontal">

        <Button
            android:id="@+id/boton1"
            android:layout_width="100dp"
            android:layout_height="32dp"
            android:background="#fff"
            android:text="CATEGORIAS"
            android:textColor="#000"
            android:textSize="15dp"
            android:textStyle="bold" />

            <Button
                android:id="@+id/boton2"
                android:layout_width="100dp"
                android:layout_height="32dp"
                android:background="#fff"
                android:text="PRODUCTOS"
                android:layout_marginLeft="10dp"
                android:textColor="#000"
                android:textSize="15dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/boton3"
                android:layout_width="100dp"
                android:layout_height="32dp"
                android:layout_marginLeft="10dp"
                android:background="#fff"
                android:text="USUARIOS"
                android:textColor="#000"
                android:textSize="15dp"
                android:textStyle="bold" />

        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textSize="30dp"
            android:text="Dar clic en cualquiera de la tres opciones, al dar clic en uno de los tres Botones le mostrará ya sea la lista de usuarios registrados, la lista de productos registrados o la lista de categorias."/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>