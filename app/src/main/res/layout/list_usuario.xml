<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/resauto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    tools:ignore="ResAuto">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="LISTA DE USUARIOS."
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="#000"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"/>

    <androidx.cardview.widget.CardView
        android:layout_width="318dp"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        card_view:cardBackgroundColor="#4EAFEA"
        card_view:cardCornerRadius="5dp"
        card_view:cardElevation="3dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="40dp"
            android:background="#4EAFEA"
            android:padding="0dp">

            <Button
                android:id="@+id/btn_editar"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Editar" />

            <Button
                android:id="@+id/btn_eliminar"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100dp"
                android:text="Editar" />

            <TextView
                android:id="@+id/textViewNombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="50dp"
                android:text="* Nombre: "
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="#000"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewNombre1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/textViewNombre"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="1dp"
                android:hint="Nombre"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="#000"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/textViewApellido"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/textViewNombre1"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="1dp"
                android:text="* Apellido"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="#000"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewApellido1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/textViewApellido"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="1dp"
                android:text="Apellido"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="#000"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/textViewCorreo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/textViewApellido1"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="1dp"
                android:text="* Correo"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="#000"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewCorreo1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/textViewCorreo"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="1dp"
                android:text="Correo"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="#000"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/textViewUsuario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/textViewCorreo1"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="1dp"
                android:text="* Usuario"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="#000"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewUsuario1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/textViewUsuario"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="1dp"
                android:text="Usuario"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="#000"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/textViewClave"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/textViewUsuario1"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="1dp"
                android:text="* Clave"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="#000"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewClave1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/textViewClave"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="1dp"
                android:text="Correo"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="#000"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/textViewTipo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/textViewClave1"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="1dp"
                android:text="* Tipo"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="#000"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewTipo1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/textViewTipo"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="1dp"
                android:text="Correo"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="#000"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/textViewEstado"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/textViewTipo1"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="1dp"
                android:text="* Estado"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="#000"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewEstado1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/textViewEstado"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="1dp"
                android:text="Estado"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="#000"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/textViewPregunta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/textViewEstado1"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="1dp"
                android:text="* Pregunta"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="#000"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewPregunta1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/textViewPregunta"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="1dp"
                android:text="Pregunta"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="#000"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/textViewRespuesta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/textViewPregunta1"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="1dp"
                android:text="* Respuesta"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="#000"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewRespuesta1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/textViewRespuesta"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="1dp"
                android:text="Respuesta"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="#000"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/textViewOtro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/textViewRespuesta1"
                android:layout_marginLeft="5dp"
                android:text="..."
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="#ffffff"
                android:textStyle="bold" />


        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>
